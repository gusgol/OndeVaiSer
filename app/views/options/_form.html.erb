

<%= form_for @option, :html => { :class => "form" } do |f| %>
  <% if @option.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@option.errors.count, "error") %> prohibited this option from being saved:</h2>

      <ul>
      <% @option.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.hidden_field :list_id, :value => params[:list_id] %><br>
  </div>
  <%= link_to options_path(:list_id => params[:list_id]) do %>
    <button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-chevron-left"></span></button>
  <% end %>
  <button type="submit" class="btn btn-primary">Salvar</button>

<% end %>
